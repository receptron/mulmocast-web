{
  "name": "sandbox-hono-vue",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "npm run build && wrangler dev",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "deploy": "npm run config:dev && VITE_GTAG=GTM-N6QMN3VF npm run build && wrangler deploy",
    "deploy-prod": "npm run config:prod && VITE_GTAG=GTM-W8L5QNPS npm run build && wrangler deploy --name mulmocast-prod && npm run config:dev",
    "config:dev": "cp client/configs/config-dev.ts client/configs/config.ts",
    "config:prod": "cp client/configs/config-prod.ts client/configs/config.ts",
    "lint": "eslint",
    "format": "prettier --write '{server,client}/**/*.{ts,json,yaml,vue}' *.json *.ts *.mjs *.html",
    "cf-typegen": "wrangler types"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.15",
    "@unhead/vue": "^2.0.19",
    "@vueuse/core": "^13.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "hono": "4.10.1",
    "lucide-vue-next": "^0.546.0",
    "reka-ui": "^2.5.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.15",
    "tw-animate-css": "^1.4.0",
    "vue": "^3.5.22",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.13",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^24.9.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.38.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-vue": "^10.5.1",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "typescript": "~5.9.3",
    "vite": "^7.1.11",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vue-tsc": "^3.1.1",
    "wrangler": "^4.43.0"
  }
}
